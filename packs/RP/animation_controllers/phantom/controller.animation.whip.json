{
	"format_version" : "1.10.0",
	"animation_controllers" : {
		"controller.animation.whip" : {
			"initial_state" : "default",
			"states" : {
				"default" : {
					"transitions" : [
						{
							"whip_idle" : "v.whip && !v.using_weapon"
						},
						{
							"whip_attack" : "v.whip && v.using_weapon"
						}
					]
				},
				"whip_idle" : {
					"animations" : [
						{ "whip_first_person": "v.is_first_person" }
					],
					"transitions" : [
						{
							"whip_attack" : "v.using_weapon"
						},
						{
							"default" : "!v.whip"
						}
					]
				},
				"whip_attack" : {
					"animations" : [
						{ "first_person_attack": "v.is_first_person" }
					],
					"transitions" : [
						{
							"whip_idle" : "!v.using_weapon"
						},
						{
							"default" : "!v.whip"
						}
					]
				}
			}
		}
	}
}
