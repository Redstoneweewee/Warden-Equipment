{
	"format_version" : "1.10.0",
	"animation_controllers" : {
		"controller.animation.reaper_skeleton.attack" : {
			"initial_state" : "default",
			"states" : {
				"default" : {
					"transitions" : [
						{
							"chase_target" : "variable.has_target"
						}
					]
				},
				"chase_target" : {
					"animations" : [ "reaper_skeleton_attack" ],
					"transitions" : [
						{
							"default" : "!variable.has_target"
						}
					]
				}
			}
		},
		"controller.animation.reaper_skeleton.crouch" : {
			"initial_state" : "default",
			"states" : {
				"default" : {
					"transitions" : [
						{
							"first_spawn" : "q.variant == 0"
						},
						{
							"crouch" : "q.variant == 2"
						}
					]
				},
				"first_spawn" : {
					"animations" : [ "reaper_skeleton_first_spawn" ],
					"transitions" : [
						{
							"default" : "q.variant == 1"
						}
					]
				},
				"crouch" : {
					"animations" : [ "reaper_skeleton_crouch" ],
					"transitions" : [
						{
							"default" : "q.variant == 1"
						}
					]
				}
			}
		}
	}
}
