{
	"format_version" : "1.10.0",
	"animation_controllers" : {
		"controller.animation.hammer" : {
			"initial_state" : "default",
			"states" : {
				"default" : {
					"transitions" : [
						{
							"hammer_idle" : "v.hammer && !v.using_weapon"
						},
						{
							"hammer_attack" : "v.hammer && v.using_weapon"
						}
					]
				},
				"hammer_idle" : {
					"animations" : [
						{ "hammer_first_person": "v.is_first_person" }
					],
					"transitions" : [
						{
							"hammer_attack" : "v.using_weapon"
						},
						{
							"default" : "!v.hammer"
						}
					]
				},
				"hammer_attack" : {
					"animations" : [
						{ "first_person_attack": "v.is_first_person" }
					],
					"transitions" : [
						{
							"hammer_idle" : "!v.using_weapon"
						},
						{
							"default" : "!v.hammer"
						}
					]
				}
			}
		}
	}
}
