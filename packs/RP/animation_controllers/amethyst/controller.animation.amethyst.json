{
	"format_version" : "1.10.0",
	"animation_controllers" : {
		"controller.animation.spear" : {
			"initial_state" : "default",
			"states" : {
				"default" : {
					"transitions" : [
						{
							"spear_idle" : "v.spear && !v.using_weapon"
						},
						{
							"spear_attack" : "v.spear && v.using_weapon"
						}
					]
				},
				"spear_idle" : {
					"animations" : [
						{ "spear_first_person": "v.is_first_person" }
					],
					"transitions" : [
						{
							"spear_attack" : "v.using_weapon"
						},
						{
							"default" : "!v.spear"
						}
					]
				},
				"spear_attack" : {
					"animations" : [
						{ "first_person_attack": "v.is_first_person" }
					],
					"transitions" : [
						{
							"spear_idle" : "!v.using_weapon"
						},
						{
							"default" : "!v.spear"
						}
					]
				}
			}
		}
	}
}
