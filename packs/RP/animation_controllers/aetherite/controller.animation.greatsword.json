{
	"format_version" : "1.10.0",
	"animation_controllers" : {
		"controller.animation.greatsword" : {
			"initial_state" : "default",
			"states" : {
				"default" : {
					"transitions" : [
						{
							"greatsword_idle" : "v.greatsword && !v.using_weapon"
						},
						{
							"greatsword_attack" : "v.greatsword && v.using_weapon"
						}
					]
				},
				"greatsword_idle" : {
					"animations" : [
						{ "greatsword_first_person": "v.is_first_person" }
					],
					"transitions" : [
						{
							"greatsword_attack" : "v.using_weapon"
						},
						{
							"default" : "!v.greatsword"
						}
					]
				},
				"greatsword_attack" : {
					"animations" : [
						{ "first_person_attack": "v.is_first_person" }
					],
					"transitions" : [
						{
							"greatsword_idle" : "!v.using_weapon"
						},
						{
							"default" : "!v.greatsword"
						}
					]
				}
			}
		}
	}
}
