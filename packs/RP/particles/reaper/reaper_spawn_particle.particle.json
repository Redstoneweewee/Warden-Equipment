{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "yes:reaper_spawn_particle",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/particle/reaper_particle"
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 20,
				"max_particles": 15
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 4
			},
			"minecraft:emitter_shape_box": {
				"offset": [0, 0.1, 0],
				"half_dimensions": [0.35, 0, 0.35],
				"direction": ["Math.random(-1, 1)", "Math.random(0, 10)", "Math.random(-1, 1)"]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "1+math.random(0,2)"
