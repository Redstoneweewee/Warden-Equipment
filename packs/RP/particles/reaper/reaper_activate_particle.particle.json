{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "yes:reaper_activate_particle",
			"basic_render_parameters": {
				"material": "particles_blend_additive_blend",
				"texture": "textures/particle/particles"
			}
		},
		"components": {
			"minecraft:emitter_initialization": {
				"creation_expression": "variable.radius = 0.65;v.life = 0;v.lmao = 0;",
				"per_update_expression": "v.life = v.life + 1;v.lmao = (v.life > 105)  ?  (v.lmao + 1) : 0;"
			},
			"minecraft:emitter_rate_steady": {
				"spawn_rate": "v.lmao == 0 ? 200 : 1000",
				"max_particles": 200
			},
			"minecraft:emitter_lifetime_looping": {
				"active_time": 4,
				"sleep_time": 10
			},
			"minecraft:emitter_shape_sphere": {
				"radius": "v.lmao == 0 ? 3-v.life/60 : 0.1",
				"surface_only": true,
				"direction": "inwards"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "v.lmao > 0 ? (3 + math.random(-1,1)) : 0.5"
			},
			"minecraft:particle_initial_speed": "math.pow(v.lmao, 1.4) > 3 ? math.pow(v.lmao, 1.3) : v.life/4",
			"minecraft:particle_motion_dynamic": {},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.2+math.random(-0.08,0.08)", "0.2+math.random(-0.08,0.08)"],
				"facing_camera_mode": "lookat_xyz",
				"uv": {
					"texture_width": 128,
					"texture_height": 128,
					"flipbook": {
						"base_UV": [56, 0],
						"size_UV": [8, 8],
						"step_UV": [-8, 0],
						"frames_per_second": 8,
						"max_frame": 8,
						"stretch_to_lifetime": true
					}
				}
			},
			"minecraft:particle_appearance_lighting": {},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#FFFF0000",
						"0.24": "#FFA30000",
						"0.86": "#FF000000"
					}
				}
			}
		}
	}
}