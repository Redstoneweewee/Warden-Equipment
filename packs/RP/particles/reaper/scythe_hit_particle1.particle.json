{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "yes:scythe_hit_particle1",
			"basic_render_parameters": {
				"material": "particles_blend",
				"texture": "textures/particle/particles"
			}
		},
		"components": {
			"minecraft:emitter_initialization": {
				"creation_expression": "v.lifetime = 0;",
				"per_update_expression": "v.lifetime = v.lifetime+1;"
			},
			"minecraft:emitter_local_space": {
				"position": true,
				"rotation": true,
				"velocity": true
			},
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 100,
				"max_particles": 100
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 0.5
			},
			"minecraft:emitter_shape_point": {
				"offset": ["-math.sin(variable.emitter_age*720)", 0, "math.cos(variable.emitter_age*720)"],
				"direction": ["math.random(-50,50)", 0, "math.random(-50,50)"]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "5-(v.lifetime/20)+math.random(-1,1)"
			},
			"minecraft:particle_initial_speed": 0,
			"minecraft:particle_motion_dynamic": {
				"linear_drag_coefficient": 50
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.1+math.random(-0.02,0.02)", "0.1+math.random(-0.02,0.02)"],
				"facing_camera_mode": "direction_y",
				"direction": {
					"mode": "custom",
					"custom_direction": ["180+math.random(-50,50)", "math.random(-50,50)", "math.random(-50,50)"]
				},
				"uv": {
					"texture_width": 128,
					"texture_height": 128,
					"flipbook": {
						"base_UV": [56, 0],
						"size_UV": [8, 8],
						"step_UV": [-8, 0],
						"frames_per_second": 8,
						"max_frame": 8,
						"stretch_to_lifetime": true,
						"loop": true
					}
				}
			},
			"minecraft:particle_appearance_lighting": {},
			"minecraft:particle_appearance_tinting": {
				"color": ["v.lifetime < 17 ? v.lifetime/80+v.particle_age/4 : (v.lifetime < 35 ? v.lifetime/35 : 1)", 0, 0, "v.lifetime < 17 ? 1 : 1.1-v.lifetime/170"]
			}
		}
	}
}