{
  "format_version": "1.10.0",
  "minecraft:attachable": {
    "description": {
      "identifier": "yes:phantom_leggings",
      "item": { "yes:phantom_leggings": "query.owner_identifier == 'minecraft:player'" },
      "materials": {
        "default": "armor",
        "enchanted": "armor_enchanted"
      },
      "textures": {
        "visible": "textures/models/phantom/armor/phantom_leggings",
        "invisible": "textures/models/phantom/armor/phantom_boots_invisible",
        "enchanted": "textures/misc/enchanted_item_glint"
      },
      "geometry": {
        "default": "geometry.player.armor.leggings"
      },
      "scripts": {
        "parent_setup": "variable.helmet_layer_visible = 0.0;",
        "pre_animation": [
          "v.rotYOriginal = (Math.round(query.rider_head_y_rotation(0)*32/45) - 1);",
          "v.rotY         = (Math.round(query.rider_head_y_rotation(0)*32/45) - 1);",
          
          "v.phantom_armor         = (v.rotY - 1 > 0) ? 1 : 0;"
        ]
      },
      "render_controllers": [ "controller.render.phantom_armor" ]
    }
  }
}
