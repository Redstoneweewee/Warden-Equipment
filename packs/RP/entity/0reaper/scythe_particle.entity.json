{
  "format_version": "1.10.0",
  "minecraft:client_entity": {
    "description": {
      "identifier": "yes:reaper_aura_particle_entity",
      "materials": { "default": "husk" },
      "textures": { "default": "textures/entity/zombie/husk" },
      "geometry": { "default": "geometry.scythe_particle_entity" },
      "scripts": {
			"should_update_bones_and_effects_offscreen": true,
        "pre_animation": [
          "variable.tcos0 = (Math.cos(query.modified_distance_moved * 38.17) * query.modified_move_speed / variable.gliding_speed_value) * 57.3;"
        ],
        "animate": [
        "particle"
        ]
      },
      "particle_effects": {
          "scythe_particle1": "yes:reaper_sphere_particle",
          "scythe_particle2": "yes:reaper_sphere_particle2",
          "scythe_particle3": "yes:reaper_sphere_particle3",
          "scythe_particle4": "yes:reaper_sphere_particle4"
      },
      "animations": {
        "particle": "animation.scythe_particle"
	 	},
      "render_controllers": [ "controller.render.default" ],
      "enable_attachables": true
    }
  }
}